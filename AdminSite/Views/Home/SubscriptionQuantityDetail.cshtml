@model Marketplace.SaaS.Accelerator.Services.Models.SubscriptionResultExtension
@{
    var replacedPlanId = Model.PlanId.ToString().Replace("_", " ").Replace("-", " ");
    var replacedOfferId = Model.OfferId.ToString().Replace("_", " ").Replace("-", " ");
    var replacedName = Model.Name.ToString().Replace("_", " ").Replace("-", " ");
}
<div>
    <div class="modal-dialog modal-lg mt200" data-backdrop="static">
        <div class="modal-content">
            <div class="modal-header header-bg">
                <h4><span class="cm-section-heading">Change Quantity</span></h4>
                <button type="button" class="close text-right" data-dismiss="modal">&times;</button>
            </div>
            <form asp-action="ChangeSubscriptionQuantity" id="frmSubscriptionQuantityDetailAdmin" method="post">
                <div class="modal-body text-center">
                    <dl class="row text-left">
                        <dt class="col-sm-4 pl80">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-8 pl80">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-4 pl80">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8 pl80">
                            @replacedName
                        </dd>
                        <dt class="col-sm-4 pl80">
                            @Html.DisplayNameFor(model => model.SubscriptionStatus)
                        </dt>
                        <dd class="col-sm-8 pl80">
                            @Html.DisplayFor(model => model.SubscriptionStatus)
                        </dd>
                        <dt class="col-sm-4 pl80">
                            @Html.DisplayName("Current Plan")
                        </dt>
                        <dd class="col-sm-8 pl80">
                            @replacedPlanId
                        </dd>
                        <dt class="col-sm-4 pl80">
                            @Html.DisplayName("Current Quantity")
                        </dt>
                        <dd class="col-sm-8 pl80">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt class="col-sm-4 pl80">
                            @Html.DisplayName("New Quantity")
                        </dt>
                        <dd class="col-sm-8 pl80">
                            @Html.TextBoxFor(s => s.Quantity, new { @class = "form-control w-100"  })
                            @Html.HiddenFor(s => s.Id)
                            @Html.HiddenFor(s => s.PlanId)
                            @Html.HiddenFor(s => s.SubscribeId)
                        </dd>
                    </dl>
                    <div class="text-right">
                        <span class="frmText" hidden>Processing.....This is might a while, you can close the window</span>
                        <div id="frmSpinner" class="spinner-border mt-2" role="status" style="margin-bottom: -10px; margin-right: 20px;" hidden>

                        </div>
                        <button id="frmButton" type="button" onclick="confirmQuantityDialog()" class="btn cm-button-default mt40 mr20 text-right">Change Quantity</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
